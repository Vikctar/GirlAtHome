<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/navigation_drawer_width"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/navigation_drawer_width"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/navigation_drawer_width"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_bg" />

                <ImageView
                    android:layout_width="@dimen/navigation_drawer_width"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/container_bg_1" />
            </LinearLayout>
            <!--sign up button-->
            <!--    <Button
                    android:id="@+id/sign_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prof_image"
                    android:layout_marginLeft="14dp"
                    android:background="@null"
                    android:text="@string/sign_join"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />-->
            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/sign_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prof_image"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/sign_join"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                card_view:typeface="NirmalaB.ttf" />
            <!--profile image-->
            <com.pkmmte.view.CircularImageView
                android:id="@+id/prof_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                app:border="true"
                app:border_color="@color/white"
                app:border_width="4dp" />

            <LinearLayout
                android:id="@+id/name_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prof_image"
                android:layout_marginLeft="14dp"
                android:orientation="vertical"
                android:visibility="invisible">
                <!--profile name-->
                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Steve Kamau"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    card_view:typeface="Centurygothic.ttf" />
                <!--email-->
                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="steve72@gmail.com"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="11sp"
                    card_view:typeface="Centurygothic.ttf" />
            </LinearLayout>

            <!--menu-->
            <RelativeLayout
                android:layout_width="@dimen/navigation_drawer_width"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="#8C54A1"
                        card_view:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/drawerList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="15dp"
                                android:clickable="true"
                                android:scrollbars="vertical" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

